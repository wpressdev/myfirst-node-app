extends layout
block content
	.container
		.row
			.col-md-4.col-md-offset-4
				.login-panel.panel.panel-default
					.panel-heading
						h3.panel-title Please Sign In
					.panel-body
						form(data-toggle='validator', role='form', action='/signin', method='POST')
							.form-group
									input#inputEmail.form-control(name='email', type='email', placeholder='Email', data-error='Email is required', required='')
									.help-block.with-errors
							.form-group
									input#inputPassword.form-control(name='password', type='password', placeholder='Password', data-error='Password is required', required='')
									.help-block.with-errors
							.form-group
								button.btn.btn-primary(type='submit') Login

	include footer